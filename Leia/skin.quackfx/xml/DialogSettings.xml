<?xml version="1.0" encoding="utf-8"?>
<!--QuackFX-->
<window>
    <defaultcontrol always="true">5</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <controls>
        <!--Dialog Overlay-->
		<control type="group">
			<visible>!Window.IsActive(fullscreenvideo)</visible>
			<include>DialogOverlayExtra</include>
			<animation effect="fade" time="250" start="0" end="100" reversible="false">WindowOpen</animation>
        </control>

        <control type="group">
			<animation effect="fade" end="0" time="0" reversible="false" condition="Window.IsVisible(yesnodialog) | Window.IsVisible(addonsettings)">Conditional</animation>
            <visible>!Window.IsActive(sliderdialog) + !Window.IsActive(subtitlesearch) + !Window.IsActive(script.pseudotv.TVOverlay.xml)</visible>
			<animation type="WindowOpen">
				<effect type="slide" start="1200" end="0" time="250" tween="cubic" easing="inout" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0" end="1200" time="250" tween="cubic" easing="inout" />
			</animation>
            <!--Panel-->
             <!--Panel-->
            <control type="image">
                <posx>630</posx>
                <posy>0</posy>
                <width>1340</width>
                <height>100%</height>
				<texture border="15">diffuse/bgpanel.png</texture>
				
				<colordiffuse>GeneralPanelsColor</colordiffuse>
            </control>
            <!-- close dialog -->
            <control type="group">
                <include>animation_fade_visible_hidden</include>
                <right>60</right>
                <width>60</width>
                <posy>40</posy>
                <include condition="Skin.HasSetting(EnableTouchSupport)">close_button</include>
            </control>
			
           <!--Header-->
            <control type="label" id="2">
                <description>Heading</description>
                <posx>700</posx>
                <posy>10</posy>
                <width>1200</width>
				<font>Bold45</font>
				<textcolor>GeneralHighlightTextColor</textcolor>
                <align>left</align>
				<height>100</height>
				<label>20333</label>
            </control>
            
            <control type="image">
                <posx>680</posx>
                <posy>220</posy>
                <width>1200</width>
                <height>670</height>
                <texture border="5">dialogs/default/inner.png</texture>
            </control>
                
            <!-- templates -->
            <control type="grouplist" id="5">
                <description>Control Area</description>
                <posx>680</posx>
                <posy>230</posy>
                <width>1200</width>
                <height>650</height>
                <orientation>vertical</orientation>
                <itemgap>0</itemgap>
                <onup>5</onup>
                <ondown>5</ondown>
                <onleft>8002</onleft>
                <onright>8002</onright>
                <scrolltime tween="cubic" easing="out">500</scrolltime>
            </control>
            <control type="button" id="7">
                <description>button template</description>
                <width>1200</width>
                <height>60</height>
                <align>left</align>
                <textoffsetx>20</textoffsetx>
                <texturenofocus>dialogs/default/separator.png</texturenofocus>
                <include>DialogButton</include>
            </control>
            <control type="radiobutton" id="8">
                <description>radiobutton template</description>
                <width>1200</width>
                <height>60</height>
                <align>left</align>
                <textoffsetx>20</textoffsetx>
                <include>DialogButton</include>
                <radioposx>1080</radioposx>
            </control>
            <control type="spincontrolex" id="9">
                <description>spincontrol template</description>
                <width>1200</width>
                <height>60</height>
                <align>left</align>
                <textoffsetx>20</textoffsetx>
                <include>DialogButton</include>
            </control>
            <control type="image" id="11">
                <description>separator image</description>
                <width>1200</width>
                <height>3</height>
                <texture>dialogs/default/separator.png</texture>
            </control>
            <control type="edit" id="12">
                <description>edit template</description>
                <width>1200</width>
                <height>60</height>
                <align>left</align>
                <textoffsetx>20</textoffsetx>
                <include>DialogButton</include>
            </control>
            <control type="sliderex" id="13">
                <description>slider template</description>
                <width>1200</width>
                <height>60</height>
                <align>left</align>
                <textoffsetx>20</textoffsetx>
                <include>DialogButton</include>
            </control>
            <control type="label" id="14">
                <description>label template</description>
                <width>1200</width>
                <height>90</height>
                <align>left</align>
                <textoffsetx>20</textoffsetx>
                <font>Bold32</font>
            </control>
			
			
            <!--Button Group-->
            <control type="grouplist" id="8002">
                <posx>680</posx>
                <posy>940</posy>
				<orientation>horizontal</orientation>
				<itemgap>20</itemgap>
				<onup>5</onup>
				<control type="button" id="28">
                    <description>OK</description>
                    <label>186</label>
                    <include>DialogButtonOther</include>
                    <animation effect="fade" start="100" end="75" time="0" condition="!Control.IsEnabled(28)">Conditional</animation>
                </control>
                <control type="button" id="29">
                    <posx>200</posx>
                    <description>Cancel</description>
                    <label>$LOCALIZE[222]</label>
					<include>DialogButtonOther</include>
                    <animation effect="fade" start="100" end="75" time="0" condition="!Control.IsEnabled(29)">Conditional</animation>
                </control>
				<control type="button" id="30">
                    <posx>740</posx>
                    <description>Clear</description>
                    <label/>
					<include>DialogButtonOther</include>
                    <animation effect="fade" start="100" end="75" time="0" condition="!Control.IsEnabled(6)">Conditional</animation>
                </control>
            </control>
        </control>
    </controls>
</window>