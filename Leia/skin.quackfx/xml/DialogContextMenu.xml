<?xml version="1.0" encoding="utf-8"?>
<!--QuackFX-->
<window>
    <defaultcontrol always="true">1000</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <onload condition="Window.IsActive(loginscreen) + Skin.HasSetting(LoginScreen_DisableContextMenu)">Close</onload>
    <controls>
		
		<!-- touchscreen support -->
		<!-- hidden button to exit dialog in touchscreen mode -->
		<control type="button">
			<posx>0</posx>
			<posy>0</posy>
			<width>100%</width>
			<height>100%</height>
			<align>center</align>
			<aligny>center</aligny>
			<font>Light28</font>
			<label/>
			<textcolor/>
			<focusedcolor/>
			<disabledcolor/>
			<texturefocus>colors/color_transparent.png</texturefocus>
			<texturenofocus/>
			<onclick>back</onclick>
			<visible>Skin.HasSetting(EnableTouchSupport)</visible>
		</control>
		
		<include>DialogContextMenuModern</include>

		
	</controls>
</window>