<?xml version="1.0" encoding="utf-8"?>
<!--QuackFX-->
<!--custom PVR window for TV headend addon-->
<window type="dialog">
    <defaultcontrol always="true">10</defaultcontrol>
    <controls>
        <!--Dialog Overlay-->
		<control type="group">
			<visible>!window.isactive(fullscreenvideo)</visible>
			<include>DialogOverlayExtra</include>
			<animation effect="fade" time="250" start="0" end="100" reversible="false">WindowOpen</animation>
        </control>
		
        <!--Dialog PVR Guid Info-->
        <control type="group">
            <visible>!Window.IsVisible(yesnodialog)</visible>
			<animation type="WindowOpen">
				<effect type="slide" start="1200" end="0" time="250" tween="cubic" easing="inout" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0" end="1200" time="250" tween="cubic" easing="inout" />
			</animation>
             <!--Panel-->
            <control type="image">
                <posx>630</posx>
                <posy>0</posy>
                <width>1340</width>
                <height>100%</height>
				<texture border="15">diffuse/bgpanel.png</texture>
				
				<colordiffuse>GeneralPanelsColor</colordiffuse>
            </control>
            <!-- close dialog -->
            <control type="group">
                <include>animation_fade_visible_hidden</include>
                <right>60</right>
                <width>60</width>
                <posy>40</posy>
                <include condition="Skin.HasSetting(EnableTouchSupport)">close_button</include>
            </control>
            <!--Header-->
            <control type="label">
                <description>Heading</description>
                <posx>700</posx>
                <posy>10</posy>
                <width>1200</width>
				<font>Bold45</font>
				<textcolor>GeneralHighlightTextColor</textcolor>
                <label>$ADDON[pvr.tvh.autorec 30101]</label>
                <height>100</height>
                <align>left</align>
            </control>
			
            <control type="group">
                <posx>680</posx>
                <posy>220</posy>
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>1200</width>
                    <height>700</height>
                    <texture border="5">dialogs/default/inner.png</texture>
                </control>
                         <control type="grouplist">
                    <posx>0</posx>
                    <posy>25</posy>
                    <itemgap>5</itemgap>
                    <width>1200</width>
                    <height>750</height>
                    <onup>9001</onup>
                    <ondown>9001</ondown>
					
                    <control type="radiobutton" id="10">
						<description>Enable transcoding</description>
                        <width>1200</width>
                        <label>$ADDON[pvr.hts 30102]</label>
                        <align>left</align>
						<textoffsetx>20</textoffsetx>
                    </control>
					<control type="spincontrolex" id="11">
                        <description>Audio codec</description>
                        <width>1200</width>
                        <label>$ADDON[pvr.hts 30103]</label>
						<textoffsetx>20</textoffsetx>
                    </control>
					<control type="spincontrolex" id="12">
                        <description>Video codec</description>
                        <width>1200</width>
                        <label>$ADDON[pvr.hts 30104]</label>
						<textoffsetx>20</textoffsetx>
                    </control>
					<control type="spincontrolex" id="13">
                        <description>Resolution</description>
                        <width>1200</width>
                        <label>$ADDON[pvr.hts 30105]</label>
                        <align>left</align>
						<textoffsetx>20</textoffsetx>
                    </control>
                </control>
            </control>
            <!--Button Group-->
            <control type="grouplist" id="9001">
                <posx>680</posx>
                <posy>940</posy>
				<orientation>horizontal</orientation>
				<itemgap>20</itemgap>
                <defaultcontrol>1</defaultcontrol>
                         <control type="button" id="1">
                    <width>350</width>
                    <align>center</align>
					<description>OK</description>
                    <label>186</label>
                    <onup>14</onup>
                    <ondown>10</ondown>
					<font>Reg26</font>
                </control>
                <control type="button" id="2">
                    <width>350</width>
                    <description>Close</description>
                    <label>$LOCALIZE[222]</label>
                    <align>center</align>
                    <onup>14</onup>
                    <ondown>10</ondown>
					<font>Reg26</font>
                </control>
            </control>
        </control>
    </controls>
</window>
		
        